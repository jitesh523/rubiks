API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false

# ==============================================
# CORS Configuration
# ==============================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost

